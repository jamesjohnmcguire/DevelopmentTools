root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Files that don't have an extension
[Commands/*]
end_of_line = lf

[*.cmd]
end_of_line = crlf

[*.{php,sh}]
end_of_line = lf

[*.html]
indent_style = space
indent_size = 2
